<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Zhangjunjie.dao.UserMapper">
    <select id="getUserList" resultType="com.Zhangjunjie.pojo.User">
        select * from mybatis.user
    </select>
    <!-- parameterType是进，查一个id需要给一个id，需要进去，然后返回回来一个User-->
    <!-- resultType是出，insert给进去的是一个User，没东西出来-->
    <select id="getUserById" parameterType="int" resultType="com.Zhangjunjie.pojo.User">
        select id from mybatis.user where id=#{id}
    </select>

    <insert id="addUser" parameterType="com.Zhangjunjie.pojo.User">
        insert into mybatis.user(id,name,pwd) values (#{id},#{name},#{pwd})
    </insert>

    <update id="updateUser" parameterType="com.Zhangjunjie.pojo.User">
        update mybatis.user set name=#{name},pwd=#{pwd} where id= #{id};
    </update>

    <delete id="deleteUserById" parameterType="int">
        delete from mybatis.user where id = #{id}
    </delete>
</mapper>